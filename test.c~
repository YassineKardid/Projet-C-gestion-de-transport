#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#include"fonction.h"
#include <time.h>
#define max 100
main()
{
int i=0,c,z=4;
info_vehicule *ve;
info_chauffeur *tete;
date dt;
printf("\n\tdate d'aujourd'huit\n");
dt=date_aujourdhuit(dt);
trans_pro *debut;
tete=NULL;
debut=NULL;
ve=(info_vehicule*)malloc(max*sizeof(info_vehicule));

do
{

printf("\n\n\t\t~~~~~~~~~~~~~~~~~~MENU~~~~~~~~~~~~~~~~~~\n\t\tEntrer un nombre\t\t\n\t\t~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n");
scanf("%d",&c);
switch(c)
{
case 1 :tete=charger_info_chauffeur(dt,debut);break;        
case 2 :i=charger_info_vehicule(ve); break;
case 3 :debut=charger_trans_pro(); break;
case 4 :debut=annuler_trans(debut,dt); break;
case 5 :tete=supprimer_chauffeur(tete);break;
case 6 :debut=programmer_transport(tete,ve,i,debut);break;
case 8 :sauvgarder_trans_prog(debut);break;
case 9 :sauvgarder_info_vehicule(ve,i);break;
case 10 :sauvgarder_info_chauffeur(tete);break;
case 11 :afficher_trans_pro(debut);break;
case 12 :afficher_trans_effectue(debut,dt);break;
case 13 :afficher_vehicule(i,ve);break;
case 14 :afficher_info_chauffeur(tete);break;
case 15 :tete=ajouter_chauffeur(debut,tete,inserer_donnees_chauffeur(tete),dt);break;
case 16 :i=ajouter_vehicule(i,ve);break;
case 17 :afficher_trans_courant(debut,dt);break;
case 18 :afficher_info_chauffeur_disponible(tete,debut);break;
case 19 :afficher_vehicule_disponible(i,ve,debut);break;
case 20 :z=5;break;
} 
}
while(z==4);
}

